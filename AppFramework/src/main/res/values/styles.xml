<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.Design.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--主页theme-->
    <style name="HomepageStyle" parent="Theme.Design.Light.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/black</item>
    </style>

    <!--闪屏theme-->
    <style name="SplashTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@mipmap/splash</item>
        <item name="android:configChanges">orientation|keyboardHidden|screenSize</item>
        <item name="android:launchMode">singleTask</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowSoftInputMode">adjustUnspecified|stateHidden</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>

    <!--独立进程防白屏theme-->
    <style name="Theme.DetachedProcessTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="Widget.Design.AppBarLayout" parent="android:Widget"><!--AppBarLayout以及ToolBar去除阴影-->
        <item name="elevation">0dp</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>


    <style name="ThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:listDivider">@drawable/shape_horizontal_divider</item>
    </style>

    <style name="LauncherThemeNoActionBar" parent="ThemeNoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="CommonTheme" parent="@style/AppTheme.NoActionBar">
        <item name="android:configChanges">orientation|keyboardHidden|screenSize</item>
        <item name="android:exported">false</item>
        <item name="android:launchMode">singleTask</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:windowSoftInputMode">adjustUnspecified|stateHidden</item>
    </style>

    <style name="TranslucentTheme" parent="CommonTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>


    <style name="WebViewLoadingStyle" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/layer_list_progress_webloading</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>
</resources>
