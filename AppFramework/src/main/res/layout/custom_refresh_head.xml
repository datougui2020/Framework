<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.library.percent.PercentRelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">


        <com.library.percent.PercentLinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_heightPercent="10%sh"
            app:layout_widthPercent="100%">

            <ImageView
                android:id="@+id/refreshingView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="45%h"
                app:layout_marginRightPercent="5%"
                app:layout_widthPercent="45%h" />

            <TextView
                android:id="@+id/refreshStateTextView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:text="@string/pull_to_refresh"
                android:textColor="#000000"
                android:textSize="14sp"
                app:layout_heightPercent="100%h"
                app:layout_widthPercent="25%w" />
        </com.library.percent.PercentLinearLayout>
    </com.library.percent.PercentRelativeLayout>

</RelativeLayout>

